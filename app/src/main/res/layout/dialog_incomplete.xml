<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_warning"
        android:contentDescription="Peringatan"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvTitleWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Belum Lengkap"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvMessageWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mohon isi semua data sebelum menampilkan biodata."
        android:textAlignment="center"
        android:textColor="#333333"
        android:textSize="15sp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btnCloseWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TUTUP"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:backgroundTint="#007AFF" />
</LinearLayout>
